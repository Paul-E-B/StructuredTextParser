<Window x:Class="StructuredTextParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StructuredTextParser"
        mc:Ignorable="d"
        Title="Structured Text Parser" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="TheButton" Content="Activate" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="-1.136,0.553" Height="44" Width="280" BorderBrush="Black" FontSize="20" Background="Red" Foreground="White" BorderThickness="5,5,5,5" Grid.Row="1"/>
        <TextBox x:Name="TheText" HorizontalAlignment="Center" TextWrapping="Wrap" Text="1. Place files in appropriate &quot;resources&quot; folder.&#xD;&#xA;2. Select parse options from the list below.&#xD;&#xA;3. Activate." VerticalAlignment="Top" Width="280" Height="69" Grid.Row="1" Margin="0,4,0,0"/>
        <ListBox x:Name="TheList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,127,10,9" Grid.Row="1"/>


    </Grid>
</Window>
